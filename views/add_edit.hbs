<h3>{{viewTitle}}</h3>

<form action="/word" method="post" autocomplete="off">
    <input type="hidden" name="_id" value="{{word._id}}">
    <div class="form-group">
        <label>Enter the Word</label>
        <input type="text" class="form-control" name="word_value" placeholder="Enter" value="{{word.word_value}}" required>
    </div>
      
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>